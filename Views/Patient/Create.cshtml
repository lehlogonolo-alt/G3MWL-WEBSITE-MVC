@model CreatePatientViewModel

@{
    ViewData["Title"] = "New Patient Record";
    var sideEffectsList = ViewBag.SideEffectsList as List<SelectListItem>;
}

<div class="container mt-4">
    <h2 class="mb-3">@ViewData["Title"]</h2>
    <hr />

    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="row">
            <!-- Patient Details Column -->
            <div class="col-md-6">
                <h4>Patient Details</h4>

                <div class="form-group mb-3">
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Age"></label>
                    <input asp-for="Age" type="number" class="form-control" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Gender"></label>
                    <input asp-for="Gender" class="form-control" />
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="TreatmentStartDate"></label>
                    <input asp-for="TreatmentStartDate" type="date" class="form-control" />
                    <span asp-validation-for="TreatmentStartDate" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="StartingWeight">Starting Weight (lbs)</label>
                    <input asp-for="StartingWeight" type="number" step="0.1" class="form-control" />
                    <span asp-validation-for="StartingWeight" class="text-danger"></span>
                </div>
            </div>

            <!-- First Weekly Report Column -->
            <div class="col-md-6">
                <h4>First Weekly Report (Week 1)</h4>

                <div class="form-group mb-3">
                    <label asp-for="CurrentWeight">Current Weight (lbs)</label>
                    <input asp-for="CurrentWeight" type="number" step="0.1" class="form-control" />
                    <span asp-validation-for="CurrentWeight" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Dosage">Dosage (mg)</label>
                    <input asp-for="Dosage" type="number" step="0.1" class="form-control" />
                    <span asp-validation-for="Dosage" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Results">Results (Score 1–10)</label>
                    <input asp-for="Results" type="number" step="0.1" class="form-control" />
                    <span asp-validation-for="Results" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="SideEffects">Side Effects</label>
                    <select asp-for="SideEffects" asp-items="@sideEffectsList" class="form-control" id="sideEffectsSelect" multiple="multiple"></select>
                    <span asp-validation-for="SideEffects" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Notes"></label>
                    <textarea asp-for="Notes" rows="4" class="form-control"></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>
            </div>
        </div>

        <hr />
        <div class="form-group d-flex gap-2">
            <input type="submit" value="Create Patient and Report" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#sideEffectsSelect').select2({
                placeholder: "Search and select side effects...",
                width: '100%'
            });
        });
    </script>
}
